<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Proyecto peti</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>

<style>
    body {
        background-color: #f4f9fd;
    }

    .card-soft {
        border: none;
        border-radius: 1.5rem;
        box-shadow: 0 10px 20px rgba(0,0,0,0.05), 0 0 10px rgba(255,255,255,0.6);
        background-color: #ffffff;
    }

    .card-header-soft {
        background-color: transparent;
        border: none;
        font-weight: 600;
        font-size: 1rem;
        padding: 1rem 1.5rem;
    }

    .list-group-item-soft {
        border: none;
        background-color: transparent;
        padding: 0.75rem 1.25rem;
        font-weight: 500;
        color: #333;
        transition: background-color 0.2s;
    }

        .list-group-item-soft:hover {
            background-color: #f0f4ff;
            border-radius: 0.75rem;
        }

    .text-mision {
        color: #0d6efd; /* Azul */
    }

    .text-vision {
        color: #6610f2; /* Violeta */
    }

    .text-valores {
        color: #fd7e14; /* Naranja */
    }

    .text-objetivos {
        color: #198754; /* Verde */
    }

    .text-analisis {
        color: #d63384; /* Rosa */
    }

    .text-cadena {
        color: #20c997; /* Verde agua */
    }

    .text-matriz {
        color: #6f42c1; /* Morado oscuro */
    }

    .text-porter {
        color: #ffc107; /* Amarillo */
    }

    .text-pest {
        color: #dc3545; /* Rojo */
    }

    .text-estrategia {
        color: #0dcaf0; /* Celeste */
    }

    .text-came {
        color: #6c757d; /* Gris oscuro */
    }

    .btn {
        font-weight: 600;
        border-radius: 1rem;
    }

    h5, h4 {
        letter-spacing: 1px;
    }
</style>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Proyecto peti</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Source/js/bootstrap.bundle.js"></script>
    <script src="~/Source/js/bootstrap.bundle.min.js"></script>
    <script src="~/Source/js/bootstrap.js"></script>
    <script src="~/Source/js/highcharts-more.js"></script>
    <script src="~/Source/js/highcharts.js"></script>
    <script src="~/Source/js/highcharts-3d.js"></script>
    <script src="~/Source/js/ini.js"></script>
    <script src="~/Source/js/jquery.js"></script>
    <script src="~/Source/js/jquery.form.js"></script>
    <script src="~/Source/js/jquery-3.7.1.min.js"></script>
    <script src="~/Source/js/exporting.js"></script>
    <script src="~/Source/js/bootstrap.min.js"></script>
    <link href="~/Source/css/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/Source/css/highcharts.css" rel="stylesheet" />
    <script src="~/Source/js/jquery.validate.min.js"></script>
    <link href="~/Source/css/bootstrap.min.css" rel="stylesheet" />
    @RenderSection("Scripts", false)
    <link href="~/Source/css/bootstrap.css" rel="stylesheet" />
    <script src="~/Source/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Source/js/offline-exporting.js"></script>
</body>
</html>
